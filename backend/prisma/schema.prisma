generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String?
  name      String?
  favorites Favorite[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  tmdbId    Int
  mediaType String

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, tmdbId, mediaType])
}

model ContinueWatching {
  id        String   @id @default(cuid())
  userId    String

  tmdbId    Int
  mediaType String   // "movie" | "tv"

  season    Int?
  episode   Int?

  progress  Float    // 0.0 - 1.0
  updatedAt DateTime @updatedAt

  @@unique([userId, tmdbId, mediaType])
}
